# Ochrana upload adresára
# Zamedzenie spúšťania PHP súborov

<Files "*.php">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.phtml">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.php3">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.php4">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.php5">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.pl">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.py">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.cgi">
    Order Allow,Deny
    Deny from all
</Files>

# Povolenie iba bezpečných typov súborov
<FilesMatch "\.(jpg|jpeg|png|gif|pdf|doc|docx|txt)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>